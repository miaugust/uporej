@page
@model Rejupo.Pages_Employees.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h2>Lista Pracowników</h2>
@if(User.IsInRole(SD.SuperAdmin) || User.IsInRole(SD.Admin))
{
<p>
    <a asp-page="Create">Dodaj pracownika</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].ControlNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Division)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Pos_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ControlNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pos_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ControlNumber">Edytuj</a> |
                <a asp-page="./Details" asp-route-id="@item.ControlNumber">Szczegóły</a> |
                <a asp-page="./Delete" asp-route-id="@item.ControlNumber">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
