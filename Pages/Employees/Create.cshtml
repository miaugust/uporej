@page
@model Rejupo.Pages_Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Nowy</h2>

<h4>Pracownik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="text-danger">@Model.Message</p>
            <div class="form-group">
                <label asp-for="Employee.ControlNumber" class="control-label"></label>
                <input asp-for="Employee.ControlNumber" class="form-control" />
                <span asp-validation-for="Employee.ControlNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Division" class="control-label"></label>
                <select asp-for="Employee.Division" asp-items="Model.Divisions">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Employee.Division" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
            <dl class="dl-horizontal"> </dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Employee.IsActive)
                </dt>
                <dd>
                    @Html.CheckBoxFor(model => model.Employee.IsActive)
                </dd>
            </dl>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
