@page 
@model Rejupo.Pages_Admin_PersonalDataAuthorizationScopes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Lista</h2>

<p>
    <a asp-page="Create">Stwórz nowe</a>
</p>
<form method="POST">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonalDataAuthorizationScope[0].Scope)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PersonalDataAuthorizationScope) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Scope)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Zmień nazwę</a> |
                <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id">Usuń</button>
            </td>
        </tr>
}
    </tbody>
</table>
</form>
