@page
@model Rejupo.Pages_Admin_Divisions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edycja</h2>

<h4>Oddział</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Division.Id" />
            <div class="form-group">
                <label asp-for="Division.Id" class="control-label"></label>
                <input asp-for="Division.Id" class="form-control" disabled/>

            </div>
            <div class="form-group">
                <label asp-for="Division.Abbreviation" class="control-label"></label>
                <input asp-for="Division.Abbreviation" class="form-control" />
                <span asp-validation-for="Division.Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Division.Descritption" class="control-label"></label>
                <input asp-for="Division.Descritption" class="form-control" />
                <span asp-validation-for="Division.Descritption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót do listy</a>
</div>

